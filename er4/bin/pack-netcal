#!/usr/bin/env bash

function pack {
	# Specifically for this package
	find	hops-$1/8.+netcal \
		-name '*+netcal.uvfits' -o -name '*.txt' \
		-type f | grep -v '\/\.' >> hops-$1-netcal.in

	# Sort and make the list unique
	sort hops-$1-netcal.in |\
		uniq           |\
		grep -v 3599   |\
	        grep -v '3601_SGRA\|3601_J1924-2914' \
		> hops-$1-netcal.ls
	rm hops-$1-netcal.in

	# Actually taring
	tar	--transform 's/^hops-/er4-hops-/g' \
		-czhf ../er4-hops-$1-netcal.tgz \
		--files-from=hops-$1-netcal.ls
}

pack hi
pack lo
