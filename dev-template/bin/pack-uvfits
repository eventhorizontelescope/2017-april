#!/usr/bin/env bash

function pack {
	# For reputability, these are things that we should always include
	find	hops-$1/{0..5}.*/bin \
		hops-$1/{0..5}.*/log \
		hops-$1/{0..5}.*/cf* \
		hops-$1/{0..5}.*/data/adhoc \
		-type f > hops-$1-uvfits.in

	find	hops-$1/{0..5}.*/data/alist.v6 \
		hops-$1/{0..5}.*/data/alist.v6*avg \
		-type f >> hops-$1-uvfits.in

	# Specifically for this package
	find	hops-$1/6.uvfits \
		-type f | grep -v '\/\.' >> hops-$1-uvfits.in

	# Sort and make the list unique
	sort hops-$1-uvfits.in | uniq > hops-$1-uvfits.ls && rm hops-$1-uvfits.in

	# Actually taring
	tar	--transform 's/^hops-/er3v2-hops-/g' \
		-czhf ../er3v2-hops-$1-uvfits.tgz \
		--files-from=hops-$1-uvfits.ls
}

#pack hi
pack lo
